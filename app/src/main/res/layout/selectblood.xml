<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="20dp"
		android:background="#FFFFFF"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/linear2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:orientation="horizontal">
			<TextView
				android:id="@+id/textview_11"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="ব্লাড গ্রুপ সিলেক্ট করুন"
				android:textSize="16sp"
				android:textColor="#000000" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/color1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:orientation="horizontal">
			<RadioButton
				android:id="@+id/radiobutton1"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_vertical"
				android:text=" A (Positive)"
				android:textSize="14sp"
				android:textColor="#000000"
				android:layout_gravity="center_vertical" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/color2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:orientation="horizontal">
			<RadioButton
				android:id="@+id/radiobutton2"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_vertical"
				android:text="A (Negative)"
				android:textSize="14sp"
				android:textColor="#000000"
				android:layout_gravity="center_vertical" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/color3"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:orientation="horizontal">
			<RadioButton
				android:id="@+id/radiobutton3"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_vertical"
				android:text=" B (Positive)"
				android:textSize="14sp"
				android:textColor="#000000"
				android:layout_gravity="center_vertical" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/color4"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:orientation="horizontal">
			<RadioButton
				android:id="@+id/radiobutton4"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_vertical"
				android:text=" B (Negative)"
				android:textSize="14sp"
				android:textColor="#000000"
				android:layout_gravity="center_vertical" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/color5"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:orientation="horizontal">
			<RadioButton
				android:id="@+id/radiobutton5"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_vertical"
				android:text=" AB (Positive)"
				android:textSize="14sp"
				android:textColor="#000000"
				android:layout_gravity="center_vertical" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/color6"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:orientation="horizontal">
			<RadioButton
				android:id="@+id/radiobutton6"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_vertical"
				android:text=" AB (Negative)"
				android:textSize="14sp"
				android:textColor="#000000"
				android:layout_gravity="center_vertical" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/color7"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:orientation="horizontal">
			<RadioButton
				android:id="@+id/radiobutton7"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_vertical"
				android:text="O (Positive)"
				android:textSize="14sp"
				android:textColor="#000000"
				android:layout_gravity="center_vertical" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/color8"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:orientation="horizontal">
			<RadioButton
				android:id="@+id/radiobutton8"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_vertical"
				android:text="O (Negative)"
				android:textSize="14sp"
				android:textColor="#000000"
				android:layout_gravity="center_vertical" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear11"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:gravity="right|center_vertical"
			android:orientation="horizontal">
			<LinearLayout
				android:id="@+id/color10"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/textview_13"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="বাতিল"
					android:textSize="16sp"
					android:textColor="#000000" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/color9"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="right"
				android:orientation="horizontal"
				android:layout_weight="1">
				<TextView
					android:id="@+id/textview_12"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:padding="8dp"
					android:text="ঠিক আছে"
					android:textSize="16sp"
					android:textColor="#000000" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
