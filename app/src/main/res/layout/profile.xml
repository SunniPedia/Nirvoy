<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/toolbar"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:background="#4CAF50"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="horizontal">
		<ImageView
			android:id="@+id/back_img"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:layout_marginLeft="15dp"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"
			android:padding="7dp"
			android:src="@drawable/ic_arrow_back_white"
			android:scaleType="fitCenter" />
		<TextView
			android:id="@+id/toolbar_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal|center_vertical"
			android:text="প্রোফাইল"
			android:textSize="16sp"
			android:textColor="#FFFFFF"
			android:layout_weight="1" />
		<ImageView
			android:id="@+id/done_img"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginTop="10dp"
			android:layout_marginRight="15dp"
			android:layout_marginBottom="10dp"
			android:padding="7dp"
			android:src="@drawable/ic_mode_edit_white"
			android:scaleType="fitCenter" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/content_wrapper"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/background"
		android:orientation="vertical">
		<RelativeLayout
			android:id="@+id/profile_relative"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="30dp"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/profile_wrapper"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_gravity="center_horizontal">
				<de.hdodenhof.circleimageview.CircleImageView
					android:id="@+id/profile_image"
					android:layout_width="70dp"
					android:layout_height="70dp"
					android:src="@drawable/profile_image"
					app:civ_border_width="0dp"
					app:civ_border_color="#008DCD"
					app:civ_circle_background_color="#FFFFFF"
					app:civ_border_overlay="true" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/choose_wrapper"
				android:layout_width="70dp"
				android:layout_height="70dp"
				android:gravity="right|bottom"
				android:orientation="horizontal">
				<LinearLayout
					android:id="@+id/choose_layout"
					android:layout_width="25dp"
					android:layout_height="25dp"
					android:background="#1976D2"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/choose_image"
						android:layout_width="15dp"
						android:layout_height="15dp"
						android:padding="3dp"
						android:src="@drawable/add_image"
						android:scaleType="centerCrop" />
				</LinearLayout>
			</LinearLayout>
		</RelativeLayout>
		<LinearLayout
			android:id="@+id/linear9"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">
			<TextView
				android:id="@+id/textview6"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="Verify your Account."
				android:textSize="20sp"
				android:textColor="#000000" />
			<TextView
				android:id="@+id/verified"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:text="Non verified"
				android:textSize="16sp"
				android:textColor="#00BCD4" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear3"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
			android:layout_marginTop="20dp"
			android:layout_marginRight="20dp"
			android:orientation="vertical">
			<TextView
				android:id="@+id/textview2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="আইডি কার্ডের নাম"
				android:textSize="14sp"
				android:textColor="#000000" />
			<LinearLayout
				android:id="@+id/linear4"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="bottom"
				android:orientation="horizontal">
				<EditText
					android:id="@+id/nidname"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="@android:color/transparent"
					android:gravity="center_vertical"
					android:textSize="16sp"
					android:textColor="#000000"
					android:textColorHint="#607D8B"
					android:singleLine="true"
					android:imeOptions="actionNext" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear5"
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="#BDBDBD"
				android:orientation="horizontal" />
			<TextView
				android:id="@+id/textview3"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_marginTop="5dp"
				android:text="Enter your nid name!"
				android:textSize="12sp"
				android:textColor="#F44336" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/username_field"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
			android:layout_marginTop="20dp"
			android:layout_marginRight="20dp"
			android:orientation="vertical">
			<TextView
				android:id="@+id/Phone_number"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="মোবাইল নাম্বার"
				android:textSize="16sp"
				android:textColor="#000000" />
			<LinearLayout
				android:id="@+id/username_wrapper"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="bottom"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/at_rate"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="+88"
					android:textSize="16sp"
					android:textColor="#000000" />
				<EditText
					android:id="@+id/username_edittext"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="@android:color/transparent"
					android:gravity="center_vertical"
					android:textSize="16sp"
					android:textColor="#000000"
					android:textColorHint="#607D8B"
					android:singleLine="true"
					android:imeOptions="actionNext" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/username_base"
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="#BDBDBD"
				android:orientation="horizontal" />
			<TextView
				android:id="@+id/username_error"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_marginTop="5dp"
				android:text="Enter your phone number !"
				android:textSize="12sp"
				android:textColor="#F44336" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/bio_field"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
			android:layout_marginTop="20dp"
			android:layout_marginRight="20dp"
			android:orientation="vertical">
			<TextView
				android:id="@+id/bio_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="আইডি কার্ডের নাম্বার"
				android:textSize="16sp"
				android:textColor="#000000" />
			<EditText
				android:id="@+id/nidnumber"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingTop="8dp"
				android:paddingRight="8dp"
				android:paddingBottom="8dp"
				android:background="@android:color/transparent"
				android:gravity="center_vertical"
				android:textSize="16sp"
				android:textColor="#000000"
				android:textColorHint="#607D8B"
				android:singleLine="true"
				android:imeOptions="actionDone" />
			<LinearLayout
				android:id="@+id/bio_base"
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="#BDBDBD"
				android:orientation="horizontal" />
			<TextView
				android:id="@+id/bio_error"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_marginTop="5dp"
				android:text="Enter your nid card number !"
				android:textSize="12sp"
				android:textColor="#F44336" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/email_field"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
			android:layout_marginTop="20dp"
			android:layout_marginRight="20dp"
			android:orientation="vertical">
			<TextView
				android:id="@+id/email_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="স্থায়ী ঠিকানা"
				android:textSize="16sp"
				android:textColor="#000000" />
			<EditText
				android:id="@+id/email_edittext"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingTop="8dp"
				android:paddingRight="8dp"
				android:paddingBottom="8dp"
				android:background="@android:color/transparent"
				android:gravity="center_vertical"
				android:textSize="16sp"
				android:textColor="#000000"
				android:textColorHint="#607D8B"
				android:singleLine="true"
				android:imeOptions="actionNext" />
			<LinearLayout
				android:id="@+id/email_base"
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="#BDBDBD"
				android:orientation="horizontal" />
			<TextView
				android:id="@+id/email_error"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_marginTop="5dp"
				android:text="Enter your permanent address!"
				android:textSize="12sp"
				android:textColor="#F44336" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear6"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
			android:layout_marginTop="20dp"
			android:layout_marginRight="20dp"
			android:orientation="vertical">
			<TextView
				android:id="@+id/textview4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="জন্ম তারিখ"
				android:textSize="16sp"
				android:textColor="#000000" />
			<LinearLayout
				android:id="@+id/linear7"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@android:color/transparent"
				android:gravity="bottom"
				android:orientation="horizontal">
				<EditText
					android:id="@+id/dob"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="@android:color/transparent"
					android:gravity="center_vertical"
					android:textSize="16sp"
					android:textColor="#000000"
					android:textColorHint="#607D8B"
					android:singleLine="true"
					android:imeOptions="actionNext" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear8"
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="#BDBDBD"
				android:orientation="horizontal" />
			<TextView
				android:id="@+id/textview5"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_marginTop="5dp"
				android:text="Enter your date of birth !"
				android:textSize="12sp"
				android:textColor="#F44336" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
			android:layout_marginTop="20dp"
			android:layout_marginRight="20dp"
			android:orientation="vertical">
			<TextView
				android:id="@+id/textview1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Nid Card Number"
				android:textSize="12sp"
				android:textColor="#BDBDBD" />
			<EditText
				android:id="@+id/Permanet_Adress"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingTop="8dp"
				android:paddingRight="8dp"
				android:paddingBottom="8dp"
				android:background="@android:color/transparent"
				android:gravity="center_vertical"
				android:textSize="12sp"
				android:textColor="#000000"
				android:textColorHint="#607D8B"
				android:singleLine="true"
				android:imeOptions="actionDone" />
			<LinearLayout
				android:id="@+id/linear2"
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="#BDBDBD"
				android:orientation="horizontal" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/dob_field"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginLeft="20dp"
			android:layout_marginTop="20dp"
			android:layout_marginRight="20dp"
			android:orientation="vertical">
			<TextView
				android:id="@+id/dob_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="10dp"
				android:text="Birth Date (Optional)"
				android:textSize="12sp"
				android:textColor="#BDBDBD" />
			<LinearLayout
				android:id="@+id/dob_wrapper"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<LinearLayout
					android:id="@+id/date_field"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="vertical"
					android:layout_weight="1">
					<TextView
						android:id="@+id/date_text"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginBottom="5dp"
						android:text="                       "
						android:textSize="12sp"
						android:textColor="#000000" />
					<LinearLayout
						android:id="@+id/date_base"
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:layout_marginLeft="30dp"
						android:layout_marginRight="30dp"
						android:padding="8dp"
						android:background="#BDBDBD"
						android:orientation="horizontal" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/month_field"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="vertical"
					android:layout_weight="1">
					<TextView
						android:id="@+id/month_text"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginBottom="5dp"
						android:text="                          "
						android:textSize="12sp"
						android:textColor="#000000" />
					<LinearLayout
						android:id="@+id/month_base"
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:layout_marginLeft="10dp"
						android:layout_marginRight="10dp"
						android:padding="8dp"
						android:background="#BDBDBD"
						android:orientation="horizontal" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/year_field"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="vertical"
					android:layout_weight="1">
					<TextView
						android:id="@+id/year_text"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginBottom="5dp"
						android:text="               "
						android:textSize="12sp"
						android:textColor="#000000" />
					<LinearLayout
						android:id="@+id/year_base"
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:layout_marginLeft="30dp"
						android:layout_marginRight="30dp"
						android:padding="8dp"
						android:background="#BDBDBD"
						android:orientation="horizontal" />
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
